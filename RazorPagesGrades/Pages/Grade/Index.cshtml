@page
@model RazorPagesGrades.Pages.Grade.IndexModel
@{
    ViewData["Title"] = "Grade manipulation";
}

<div class="row">
    <div class="col">
        <h1>Add, Edit, Delete grades</h1>
    </div>
</div>
<div class="jumbotron-fluid">
    <a class="btn btn-primary">(+) grade Add</a>
    <a class="btn btn-primary">(*) grade Edit</a>
</div>
<div class="row">
    <div class="col">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    @*<th><label asp-for="Grades[0].Acronym"></label></th>*@
                    <th>@Html.DisplayNameFor(m => m.Grades.FirstOrDefault().Acronym)</th>
                    <th>@Html.DisplayNameFor(m => m.Grades.FirstOrDefault().Subject)</th>
                    <th>@Html.DisplayNameFor(m => m.Grades.FirstOrDefault().ValWithMinus)</th>
                    <th>@Html.DisplayNameFor(m => m.Grades.FirstOrDefault().WeightAlpha)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Grades)
                {
                    <tr>
                        <td>@item.Acronym</td>
                        <td>@item.Subject</td>
                        <td>@item.ValWithMinus</td>
                        <td>@item.WeightAlpha</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

